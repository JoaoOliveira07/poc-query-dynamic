<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="006-create-indicator-tables" author="system">
        <createTable tableName="indicator_rule">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="rule_key" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)"/>
            <column name="icon" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="condition_field" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="condition_operator" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="condition_value" type="VARCHAR(255)"/>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="display_order" type="INT" defaultValueNumeric="0"/>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP"/>
        </createTable>

        <createIndex indexName="idx_indicator_rule_active" tableName="indicator_rule">
            <column name="active"/>
        </createIndex>

        <createIndex indexName="idx_indicator_rule_display_order" tableName="indicator_rule">
            <column name="display_order"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>

